<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluesea"
    android:gravity="center|top"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_sel_option_scene"
    tools:context="com.example.netrasagar.sel_option">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#3fff"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtv_welcom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oleo_script"
                android:paddingLeft="3dp"
                android:textColor="#E6FFFFFF"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="logout"
                android:foreground="@drawable/logoutbtn" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_depart"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/departure"
                     android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_arrival"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/arrival"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_reprint_pass"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/reprintPass"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_fishcatch"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/fish_catch"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_fishcatch_kl"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/fish_catch"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_report"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/reports"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_report_kl"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/reports"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_crewentry"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/crew"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_vesselentry"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/vessel"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_licence_renewal"
                    android:layout_width="293dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_options"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/licencerenewal"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_approvepass"
                        android:layout_width="293dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_options"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/approvePass"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <Button
                        android:id="@+id/approvePassCount"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:background="@drawable/btn_red"
                        android:clickable="false"
                        android:text="01"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </LinearLayout>
        </ScrollView>




    </LinearLayout>


</LinearLayout>